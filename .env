# --- Rumor-mongering (FD) ---
SDCC_FD_B=3                # fanout per rumor
SDCC_FD_F=2                # MaxFw (limite duplicati)
SDCC_FD_T=3                # TTL (hop budget)

# --- Heartbeats ---
SDCC_HB_LIGHT_EVERY=3s     # periodo HB light
SDCC_HB_FULL_EVERY=9s      # periodo HB full
SDCC_HB_LIGHT_MAX_HINTS=5  # max peer hints nel light-HB

# --- Failure detector timeouts ---
SDCC_SUSPECT_TIMEOUT=40s   # tempo → suspect
SDCC_DEAD_TIMEOUT=70s      # tempo suspect → dead

# --- Anti-entropy (repair) ---
SDCC_REPAIR_ENABLED=false  # abilita ciclo di repair
SDCC_REPAIR_EVERY=30s      # frequenza repair

# --- Lookup ---
SDCC_LOOKUP_TTL=3              # hop budget lookup
SDCC_LEARN_FROM_LOOKUP=true    # apprendimento da risposte lookup
SDCC_LEARN_FROM_HB=true        # apprendimento da full-HB
SDCC_CLIENT_DEADLINE=8s        # timeout client one-shot (--lookup)
SDCC_LOOKUP_NEGCACHE_TTL=20s   # TTL negative cache per servizi mancanti

# --- RPC demo services ---
SDCC_RPC_A=18
SDCC_RPC_B=3

# --- Logging & bootstrap ---
SDCC_CLUSTER_LOG_EVERY=10s     # 0s per disabilitare il log cluster
SDCC_REGISTRY_MAX_ATTEMPTS=10  # tentativi massimi verso registry
